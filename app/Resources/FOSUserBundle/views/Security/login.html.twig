{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form id="login-form" action="{{ path("fos_user_security_check") }}" method="post">
    {% if error %}
        <div class="error" style="display: none"></div>
    {% endif %}
    <div class="modal-body">
        <div id="div-login-msg">
            <div id="icon-login-msg" class="glyphicon glyphicon-chevron-right"></div>
            <span id="text-login-msg">Введите логин и пароль</span>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <input type="text" id="login_username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Логин"/>
        <input type="password" id="login_password" name="_password" required="required" class="form-control" placeholder="Пароль"/>
        <div class="checkbox">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Запомнить меня
            </label>
        </div>
    </div>
    <div class="modal-footer">
        <div>
            <input type="submit" id="_submit" name="_submit" value="Вход" class="btn btn-primary btn-lg btn-block" />
        </div>
        <div>
            <button id="login_lost_btn" type="button" class="btn btn-link">Забыли пароль?</button>
            <button id="login_register_btn" type="button" class="btn btn-link">Зарегистрироваться</button>
        </div>
    </div>
</form>
{% endblock fos_user_content %}
