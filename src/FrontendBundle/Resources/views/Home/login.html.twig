{% if user is defined %}
    <a class="nav navbar-nav navbar-right button-logout" href="{{ path('frontend_dashboard_page') }}">
        <button class="btn btn-success"><i class="glyphicon glyphicon-user"></i>{{ user.username }}</button>
    </a>
{% else %}
    <a class="nav navbar-nav navbar-right button-login login">
        <button class="btn btn-success" data-toggle="modal" data-target="#login-modal"><i class="glyphicon glyphicon-user"></i>Войти</button>
    </a>
{% endif %}
