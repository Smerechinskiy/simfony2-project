<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BONE-APPETIT{% endblock %}</title>
        <meta name="keywords" content="{% block keywords %}{% endblock %}"/>
        <meta name="description" content="{% block description %}{% endblock %}"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, , user-scalable=no">
        <link rel="shortcut icon" href="{{ asset('bundles/frontend/img/favicon.ico') }}" type="image/x-icon">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/backend/css/bootstrap.min.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bundles/frontend/css/style.css') }}" type="text/css" />
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('bundles/backend/js/jquery-2.2.4.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/backend/js/bootstrap.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/frontend/js/script.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/frontend/js/modal-register.js') }}" type="text/javascript"></script>
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {#Навигационное меню#}
            <nav class="nav navbar-default navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#responsive-menu">
                            <span class="sr-only">Развернуть меню</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('home_page') }}" title="Bon Appetit">
                            <h5 class="logo">
                                Bon<br>
                                <small>APPETIT</small>
                            </h5>
                            <i class="glyphicon glyphicon-cutlery"></i>
                        </a>
                    </div>
                    <div class="collapse navbar-collapse" id="responsive-menu">
                        {{ render(controller('FrontendBundle:Home:topmenu')) }}
                        {{ render(controller('FrontendBundle:Home:login')) }}
                        {{ render(controller('FrontendBundle:Home:cart')) }}
                    </div>
                </div>
            </nav>
            {#Вставка основного контента страницы#}
            {% block content %}{% endblock %}
        </div>
        {#Модальное окно входа на сайт#}
        <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" align="center">
                        <i id="form-logo" class="glyphicon glyphicon-cutlery"></i>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div id="div-forms">
                        {{ render(controller('FOSUserBundle:Security:login')) }}
                        {{ render(controller('FOSUserBundle:Resetting:request')) }}
                        {{ render(controller('FOSUserBundle:Registration:register')) }}
                    </div>
                </div>
            </div>
        </div>
        {% block customScripts %}{% endblock %}
    </body>
</html>